<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_common"/>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/bookbag_name"
                style="@style/HemlockText.PagePrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                tools:text="Stuff to Read" />

            <TextView
                android:id="@+id/bookbag_description"
                style="@style/HemlockText.PageSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                tools:text="a collection of stuff to read" />
        </LinearLayout>
    </LinearLayout>
     
	<ListView 
	  android:id="@+id/bookbagitem_list"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"  
	  android:paddingTop="8dip"
      android:dividerHeight="1dp"
	  />

</LinearLayout>