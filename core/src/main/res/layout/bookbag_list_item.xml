<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="left|center"
    android:minHeight="@dimen/target_min_height"
    android:orientation="horizontal"
    android:paddingLeft="12dip"
    android:paddingTop="3dip"
    android:paddingRight="12dip"
    android:paddingBottom="3dip">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_weight="1">

        <TextView
                android:id="@+id/bookbag_name"
                style="@style/HemlockText.ListPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Stuff to Read" />

        <TextView
                android:id="@+id/bookbag_description"
                style="@style/HemlockText.ListSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="a collection of stuff to read" />

    </LinearLayout>

    <TextView
            android:id="@+id/bookbag_items"
            style="@style/HemlockText.ListPrimary"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="top"
            tools:text="7 items" />

</LinearLayout>
