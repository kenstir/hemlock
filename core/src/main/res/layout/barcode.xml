<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/logo_background"
            android:padding="24dp"
            android:src="@drawable/splash_title"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/barcode_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal|center"
            android:width="300dp"
            android:background="@color/white"
            android:contentDescription="@string/barcode_text_description"
            android:gravity="bottom|center_horizontal|center"
            android:paddingLeft="16dp"
            android:paddingTop="32dp"
            android:paddingRight="16dp"
            android:paddingBottom="0dp"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="2 0000 1111 2222 3" />

        <ImageView
            android:id="@+id/barcode_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:width="400dp"
            android:height="200dp"
            android:background="@color/white"
            android:contentDescription="@string/barcode_description"
            android:paddingLeft="32dp"
            android:paddingTop="8dp"
            android:paddingRight="32dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/barcode_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal|center"
            android:background="@color/white"
            android:contentDescription="@string/barcode_expiration_date_description"
            android:gravity="bottom|center_horizontal|center"
            android:paddingLeft="16dp"
            android:paddingTop="0dp"
            android:paddingRight="16dp"
            android:paddingBottom="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/material_grey_700"
            tools:text="Expires May 3, 2023" />
    </LinearLayout>

</LinearLayout>