<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Hemlock"><!-- empty, just for naming --></style>

    <style name="spacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">14dip</item>
    </style>

    <style name="BigActionButton">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">@dimen/bigActionButton_marginVertical</item>
        <item name="android:layout_marginBottom">@dimen/bigActionButton_marginVertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/action_button</item>
    </style>

    <style name="ActionButton">
        <item name="android:padding">0dip</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/action_button</item>
    </style>

    <style name="HemlockText" parent="TextAppearance.AppCompat"></style>

    <style name="HemlockText.SpinnerPrimary">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HemlockText.SpinnerSecondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HemlockText.ListPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="HemlockText.ListPrimaryRead">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="HemlockText.ListSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="HemlockText.ListSecondaryRead">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <style name="HemlockText.ListTertiary">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="HemlockText.PagePrimary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="HemlockText.PageSecondary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HemlockText.PageTertiary">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="alertText">
        <item name="android:textColor">@color/hemlock_text_alert</item>
    </style>

    <style name="textSplash">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Content">
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="ApplicationButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Hemlock.SecondaryBar" parent="HemlockText">
        <item name="android:elevation">1dp</item>
        <item name="android:background">@color/secondary_bar_background</item>
    </style>

    <style name="Hemlock.SearchBar" parent="">
        <item name="android:background">@color/search_bar_background</item>
        <item name="android:textColorHint">@color/search_bar_hint</item>
    </style>

    <style name="Hemlock.TableHeader" parent="">
        <item name="android:background">@color/table_header_background</item>
        <item name="android:textColor">@color/table_header_textcolor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="Hemlock.ActionButton" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Hemlock.GridButton" parent="Widget.AppCompat.Button">
        <item name="android:drawablePadding">12dp</item>
<!--        <item name="android:layout_marginLeft">24dp</item>-->
<!--        <item name="android:layout_marginRight">24dp</item>-->
<!--        <item name="android:paddingLeft">24dp</item>-->
<!--        <item name="android:paddingRight">24dp</item>-->
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:minHeight">120dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HemlockDark" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="HemlockDarkNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="HemlockLightNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="HemlockProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Hemlock.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/material_grey_100</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="titleTextColor">@color/material_grey_100</item>
        <item name="subtitleTextColor">@color/material_grey_200</item>
    </style>

    <style name="HemlockDarkNoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryFlatButton" parent="HemlockDark">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorAccent">@color/primary</item>
    </style>

</resources>
